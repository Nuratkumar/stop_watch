<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#FFEB3B"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="STOP WATCH"
        android:textColor="#DA1A1A"
        android:layout_gravity="center"
        android:textSize="30dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/startbtn_shape"
            android:gravity="center"
            android:text="START"
            android:textSize="45dp" />

        <Button
            android:id="@+id/pause"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/pausebtn_shape"
            android:gravity="center"
            android:text="STOP"
            android:textSize="45dp"
            android:visibility="gone"/>

    </FrameLayout>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="50dp"
        android:textSize="30dp"
        android:textColor="#C50166"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/resetbtn_shape"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/lapTimesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#2196F3"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/lap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lap"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:background="@drawable/labbtn_shape"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>
